{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend GraphQL avec Apollo Server et Prisma",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev src/index.ts",
    "build": "prisma generate && tsc",
    "start": "node dist/index.js",
    "vercel-build": "prisma generate && tsc && echo 'Build completed successfully'",
    "vercel-build-api": "cd api && npm install && cd .. && prisma generate && tsc && echo 'API Build completed successfully'",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "prisma:migrate": "prisma migrate dev",
    "prisma:generate": "prisma generate",
    "prisma:studio": "prisma studio",
    "seed": "ts-node seed-products.ts",
    "seed:reset": "ts-node seed-products.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "apollo-server": "^3.13.0",
    "graphql": "^16.11.0",
    "graphql-tag": "^2.12.6",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.3.1",
    "typescript": "^5.9.2",
    "prisma": "^5.22.0",
    "@types/node": "^20.19.17",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "ts-node-dev": "^2.0.0"
  }
}